generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id   Int    @id @default(autoincrement())
  NIK       String @unique
  nama      String
  no_hp     String
  jenis_kel String
  alamat    String
  agama     String
  username  String
  password  String
  photo     Bytes?
}

model Keuangan {
  keuangan_id    Int      @id @default(autoincrement())
  jenisTransaksi String
  keterangan     String
  kategori       String
  tanggal        DateTime
  jumlah         Decimal  @db.Decimal(15, 2)
  catatan        String
}

model Berita {
  berita_id Int     @id @default(autoincrement())
  judul     String
  kategori  String
  photo     Bytes?
  tanggal   String?
  kontent   String
  status    String
}
